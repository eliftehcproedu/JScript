//Soru 3: Prompt ile kullanicidan  boy ve kilosunu alip BMI hesaplayalim
//BMI = kilo / (boy * boy)  kilogram/metre
var boy = prompt("Lutfen boyunuzu cm olarak giriniz");
var kilo= prompt ("Lutfen kilonuzu kg olarak giriniz");
boy=boy/100;
var bmi=(kilo/(boy*boy)).toFixed(1);
alert("Vucut kutle endeksiniz : " + bmi);


