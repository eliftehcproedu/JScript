Görev-2
var isim=prompt("İsminizi giriniz");
var cardNo=prompt("Kredi Kartı Numaranızı giriniz");
var isimIlk=isim.substring(0,1).toUpperCase();
var cardSonDort=cardNo.slice(cardNo.length-4);
var newIsim=isim.slice(1).replace(/[a-z]/gi,"*");
var cardNew=cardNo.substring(0,cardNo.length-4).replace(/[0-9]/g,"*");
console.log("İsminiz=" + isimIlk+newIsim);
console.log("Kart Numaranız=" +cardNew+cardSonDort);
















