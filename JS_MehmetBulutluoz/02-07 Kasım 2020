Görev-1
var isim=prompt("İsminizi giriniz");
var soyIsim=prompt("Soy isminizi giriniz");
var isimIlk=isim.substring(0,1).toUpperCase();
var soyIlk=soyIsim.substring(0,1).toUpperCase();
console.log(isimIlk+isim.slice(1).toLowerCase()+ " "+soyIlk+soyIsim.slice(1).toLowerCase());


